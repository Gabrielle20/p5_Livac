{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h1>{{ article.title }}</h1>
        <div class="metadata">
            Écrit le {{ article.createdAt | date('d/m/Y')}} à {{ article.createdAt | date('H:i')}} ;
            <br/>
            {# Catégorie : {{ article.categorie }} #}
            {{ article.author }}
            <br/>
        </div>

        <div class="content">
            {{ article.entete | raw }}
            <br/>
            <img src="{{ article.image }}" alt="">
            <br/>
        </div>

        <br/> 

        <div class="contenu">
            {{ article.content | raw }}
        </div>
    </article>
{% endblock %}