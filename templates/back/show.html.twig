{% extends 'baseFront.html.twig' %}

{% block body %}
    <article>
        <h1>{{ article.title }}</h1>
        <div class="metadata">
            Écrit le {{ article.createdAt | date('d/m/Y')}} à {{ article.createdAt | date('H:i')}}
            <br/>
            Catégorie : {{ article.category.title }}
            <br/>
            Auteur : {{ article.author }}
            <br/>
        </div>

        <div class="content">
            <img src="{{ article.image }}" alt="">
            <br/>
            {{ article.entete | raw }}
        </div>

        <br/> 

        <div class="contenu">
            {{ article.content | raw }}
        </div>
    </article>
{% endblock %}