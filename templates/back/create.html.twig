{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>
        {% if editMode %}
            Modification de l'article
        {% else %}
            Création d'un nouvel article
        {% endif %}
    </h1>


    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'label':"Titre", 'attr': {'placeholder': "Titre de l'article"}}) }}
    
    {{ form_row(formArticle.entete, {'label': "En-tête", 'attr': {'placeholder': "Entête de l'article"}}) }}
    
    {{ form_row(formArticle.image, {'attr': {'placeholder': "URL de l'image"}}) }}
    
    {{ form_row(formArticle.content, {'attr': {'placeholder': "Contenu de l'article"}}) }}
    
    {{ form_row(formArticle.author, {'label':"Auteur", 'attr': {'placeholder': "Auteur de l'article"}}) }}
    
    {{ form_row(formArticle.category, {'label': "Catégorie de l'article", 'attr': {'placeholder': "Catégorie de l'article"}}) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>
    
    {% if editMode %}
        <a href="{{ path('back_delete', {'id': id }) }}" class="btn btn-danger">
            Supprimer l'article
        </a>
    {% endif %}

    {{ form_end(formArticle) }}

{% endblock %}
