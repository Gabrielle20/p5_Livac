{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>
        {% if editMode %}
            Modification de l'article
        {% else %}
            Création d'un nouvel article
        {% endif %}
    </h1>


    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'attr': {'placeholder': "Titre de l'article"}}) }}

    {{ form_row(formArticle.entete, {'attr': {'placeholder': "Entête de l'article"}}) }}

    {{ form_row(formArticle.image, {'attr': {'placeholder': "URL de l'image"}}) }}

    {{ form_row(formArticle.contenu, {'attr': {'placeholder': "Contenu de l'article"}}) }}

    {{ form_row(formArticle.categorie, {'attr': {'placeholder': "Catégorie de l'article"}}) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>

    {{ form_end(formArticle) }}

{% endblock %}