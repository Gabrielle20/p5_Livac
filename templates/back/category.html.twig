{% extends 'base.html.twig' %}

{% form_theme formCategory 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/style.min.320.css">
    <link rel="stylesheet" href="../css/style.min.768.css">
    <link rel="stylesheet" href="../css/style.pad.1112.css">
{% endblock %}

{% block body %}

    <h1>Création d'une nouvelle catégorie </h1>

    {{ form_start(formCategory) }}

    {{ form_row(formCategory.title, {'label':"Titre", 'attr': {'placeholder': "Titre de la catégorie"}}) }}

    <button type="submit" class="btn btn-success"> Ajouter la catégorie</button>

    {{ form_end(formCategory) }}

    <br/>
    <br/>

    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th scope="col">Catégorie</th>
                <th scope="col">Nombre d'articles</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        {% for category in category %}
            <tbody>
                <tr>
                    <th scope="row">{{ category.title }}</th>
                    {# <th scope="row">{{ totalArticlesByCategory|raw }}</th> #}
                    <td>{{ totalCategories|raw }}</td>
                    <td><a href="{{ path('back_edit_category', {'id': category.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('back_delete_category', {'id': category.id}) }}" class="btn btn-danger">Supprimer</a>
                        <!-- <button type="submit" class="btn btn-danger">Supprimer</button> -->
                    </td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock %}
