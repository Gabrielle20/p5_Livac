{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/style.min.320.css">
    <link rel="stylesheet" href="../css/style.min.768.css">
    <link rel="stylesheet" href="../css/style.pad.1112.css">
{% endblock %}

{% block body %}
    <h1>Bienvenue Administrateur !</h1>

    <br/>

    <div class="row">
        <div class="col-6">
            <div class="lastArticles">
                <h5>Derniers articles postés :</h5>
                {% for lastArticle in lastTenArticles %}
                <div class="list-group">
                    <a href="{{ path('back_edit', {'id': lastArticle.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{ lastArticle.title }}</h5>
                            <small>{{ lastArticle.createdAt | date('d/m/Y') }}</small>
                        </div>
                        <p class="mb-1">{{ lastArticle.entete }}</p>
                        <small>{{ lastArticle.author }}</small>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    
        <div class="col-6">
            <div class="lastCommentaires">
                <h5>Commentaires signalés :</h5>
                {% for reportedComments in reportedComments %}
                <div class="list-group">
                    <a href="{{ path('back_comment', {'id': reportedComments.id}) }}" id="reported-comment" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <small>{{ reportedComments.createdAt | date('d/m/Y')}}</small>
        
                        </div>
                        <p class="mb-1">{{ reportedComments.content }}</p>
                        {# <p class="mb-1">{{ reportedComments.article }}</p> #}
                        <small>{{ reportedComments.author }}</small>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

