{% extends 'baseFront.html.twig' %}

{% block title %}LIVAC{% endblock %}

{% block body %}
    <div class="diaporama">

    </div>

    <div class="main">
        {% for article in articles  %}
            <div class="col-lg-8">
                <div class="jumbotron">
                    <a href="{{ path('show', {'id': article.id}) }}"><h1 class="display-3">{{ article.title }}</h1></a>
                    <p class="lead">{{ article.entete}}</p>
                    <hr class="my-4">
                    <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
                    <img src="{{ article.image }}">
                </div>
                <hr class="my-4">
            </div>
        {% endfor %}
    </div>
{% endblock %}
