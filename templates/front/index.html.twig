    <div class="main-wrapper">
        <div class="row">
            <div class="col-7">
                <div class="main">
                    <div class="diaporama" id="diaporama"></div>
    
                    {% for article in articles %}
                        <div class="main-articles main">
                            <div class="jumbotron">
                                <a href="{{ path('show', {'id': article.id}) }}">
                                    <h1 class="display-3">{{ article.title }}</h1>
                                </a>
                                <div class="article-infos">
                                    <small>Auteur : {{ article.author }}</small> |
                                    <small>Publié le : {{ article.createdAt | date('d/m/Y') }}</small>
                                    <br/>
                                    <small>Catégorie : {{ article.category.title }}</small>
                                </div>
                                <hr class="my-4">
                                <p class="lead">{{ article.entete}}</p>
                                <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="">
                            </div>
                            <!-- <hr class="my-4"> -->
                        </div>
                    {% endfor %}

                </div>
            </div>

    
            <div class="col-4">
                <div class="side">
                    <div class="a-lire">
                        <h4>À lire :</h4>
                        <div class="list-group">
                            {% for aLire in aLire %}
                            <a href="{{ path('show', {'id': aLire.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">{{ aLire.title }}</h5>
                                    <small>{{ aLire.createdAt | date('d/m/Y') }}</small>
                                </div>
                                <p class="mb-1">{{ aLire.entete }}</p>
                                <small class="text-muted">{{ aLire.author }}</small>
                            </a>
                            {% endfor %}
                        </div>
                    </div>
    
                   
    
                    <div class="categories">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action active">CATÉGORIES :</a>
                            {% for category in allCategories %}
                            <a href="#" class="list-group-item list-group-item-action">{{ category.title }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="sections">
            <div class="section-row">
                <div class="col-3">
                    <div class="section-row-category">
                        <h4>Opinion :</h4>
                        {% for articlesOpinion in articlesOpinion %}
                            <div class="list-group">
                                <a href="{{ path('show', {'id': articlesOpinion.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <h5 class="mb-1">{{ articlesOpinion.title }}</h5>
                                    <p>{{ articlesOpinion.entete }}</p>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-3">
                    <div class="section-row-category">
                        <h4>Politique :</h4>
                        {% for articlesPolitique in articlesPolitique %}
                            <div class="list-group">
                                <a href="{{ path('show', {'id': articlesPolitique.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <h5 class="mb-1">{{ articlesPolitique.title }}</h5>
                                    <p>{{ articlesPolitique.entete }}</p>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-3">
                    <div class="section-row-category">
                        <h4>Juridique :</h4>
                        {% for articlesJuridique in articlesJuridique %}
                            <div class="list-group">
                                <a href="{{ path('show', {'id': articlesJuridique.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <h5 class="mb-1">{{ articlesJuridique.title }}</h5>
                                        <p>{{ articlesJuridique.entete }}</p>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-3">
                    <div class="section-row-category">
                        <h4>Économie :</h4>
                        {% for articlesEconomie in articlesEconomie %}
                            <div class="list-group">
                                <a href="{{ path('show', {'id': articlesEconomie.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <h5 class="mb-1">{{ articlesEconomie.title }}</h5>
                                    <p>{{ articlesEconomie.entete }}</p>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-3">
                    <div class="section-row-category">
                        <h4>Société :</h4>
                        {% for articlesSociété in articlesSociété %}
                            <div class="list-group">
                                <a href="{{ path('show', {'id': articlesSociété.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <h5 class="mb-1">{{ articlesSociété.title }}</h5>
                                    <p>{{ articlesSociété.entete }}</p>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action active">Nous contacter :</a>
            <a href="#" class="list-group-item list-group-item-action">Dapibus ac facilisis in</a>
            <a href="#" class="list-group-item list-group-item-action action">Morbi leo risus</a>
        </div>
    </div>



   

{% endblock %}

{% block javascripts %}
    <script src="js/main.js"></script>
    <script src="js/diaporama.js"></script>
{% endblock %}
