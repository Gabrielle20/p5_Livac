{% extends 'baseFront.html.twig' %}

{% block title %}LIVAC{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/style.min.320.css">
    <link rel="stylesheet" href="../css/style.min.768.css">
    <link rel="stylesheet" href="../css/style.pad.1112.css">
{% endblock %}

{% block body %}
<br /><br />


    {# <div class="jumbotron"><a href="{{ path('api') }}" id="header">
        <h1 class="display-3">Actualités du jour</h1>
        {# <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to
