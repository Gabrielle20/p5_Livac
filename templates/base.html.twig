<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ADMIN{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
        {% block stylesheets %}
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/style.min.320.css">
        <link rel="stylesheet" href="css/style.min.768.css">
        <link rel="stylesheet" href="css/style.pad.1112.css">

        {% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('front') }}">LIVAC</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">        
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_login') }}">Connexion</i></a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('back') }}">Admin</a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('back_create') }}">Nouvel Article</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('back_liste_articles') }}">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('back_comment') }}">Commentaires</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('back_category') }}">Catégories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('back_section') }}">Sections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_registration') }}">Créer un compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}">Déconnexion</a>
                        </li>
                    {% endif %}



                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                            aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>


        <div class="container">
        {% block body %}{% endblock %}
        

        {% block javascripts %}
            <script src="js/main.js"></script>
            <!-- // <script src="js/news.js"></script> -->
        {% endblock %}
    </body>
</html>